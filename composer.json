{
    "name": "miquido/request-data-collector-guzzle",
    "description": "Library used to extend the Request Data Collector by collecting Guzzle requests.",
    "authors": [
        {
            "name": "Maciej Kudas",
            "email": "maciejkudas@gmail.com",
            "role": "Developer"
        },
        {
            "name": "≈Åukasz Legenc",
            "email": "lukasz.legenc@miquido.com",
            "role": "Developer"
        },
        {
            "name": "Maksymilian Lewicki",
            "email": "maksymilian.lewicki@gmail.com",
            "role": "Developer"
        }
    ],
    "keywords": [
        "request",
        "data collector",
        "data-collector",
        "request-data-collector",
        "request-data-collector-guzzle",
        "collector",
        "guzzle"
    ],
    "homepage": "https://github.com/miquido/request-data-collector-guzzle",
    "license": "Apache-2.0",
    "require": {
        "php": "^7.3|^8.0",
        "guzzlehttp/guzzle": "^6.0|^7.0",
        "miquido/request-data-collector": "^2.2"
    },
    "suggest": {
        "miquido/request-data-collector-elasticsearch": "Allows collecting Elasticsearch requests"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.18.5",
        "jangregor/phpstan-prophecy": "^0.8.1",
        "phpspec/prophecy-phpunit": "^2.0.1",
        "phpstan/phpstan": "^0.12.83",
        "phpstan/phpstan-phpunit": "^0.12.18",
        "phpunit/phpunit": "^9.5",
        "symfony/var-dumper": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "Miquido\\RequestDataCollector\\Collectors\\GuzzleCollector\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Miquido\\RequestDataCollector\\Collectors\\GuzzleCollector\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "cs-check": [
            "php-cs-fixer fix -v --diff --dry-run --stop-on-violation --ansi --verbose"
        ],
        "lint": [
            "php-cs-fixer fix -v --dry-run --diff --ansi"
        ],
        "fix": [
            "php-cs-fixer fix -v --ansi"
        ],
        "code-analyse": [
            "@code-analyse:guzzle6",
            "@code-analyse:guzzle7"
        ],
        "code-analyse:guzzle6": [
            "phpstan analyse -l 4 src -c phpstan.guzzle6.neon --memory-limit=512M --ansi --verbose",
            "phpstan analyse -l 4 tests -c phpstan.tests.guzzle6.neon --memory-limit=512M --ansi --verbose"
        ],
        "code-analyse:guzzle7": [
            "phpstan analyse -l 4 src -c phpstan.guzzle7.neon --memory-limit=512M --ansi --verbose",
            "phpstan analyse -l 4 tests -c phpstan.tests.guzzle7.neon --memory-limit=512M --ansi --verbose"
        ],
        "code-analyse:clear-cache": [
            "phpstan clear-result-cache -c phpstan.guzzle6.neon",
            "phpstan clear-result-cache -c phpstan.tests.guzzle6.neon",
            "phpstan clear-result-cache -c phpstan.guzzle7.neon",
            "phpstan clear-result-cache -c phpstan.tests.guzzle7.neon"
        ],
        "test-unit": [
            "@test-unit:guzzle6",
            "@test-unit:guzzle7"
        ],
        "test-unit:guzzle6": [
            "phpunit --configuration phpunit.guzzle6.xml --colors=auto"
        ],
        "test-unit:guzzle7": [
            "phpunit --configuration phpunit.guzzle7.xml --colors=auto"
        ],
        "test": [
            "@cs-check",
            "@code-analyse",
            "@test-unit"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
